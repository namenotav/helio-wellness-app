{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "profile": {
          ".validate": "newData.hasChildren(['email', 'createdAt'])"
        },
        "healthData": {
          ".validate": "auth != null"
        },
        "battles": {
          ".read": "auth != null",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "leaderboard": {
      ".read": "auth != null",
      ".write": false
    },
    ".read": false,
    ".write": false
  }
}
