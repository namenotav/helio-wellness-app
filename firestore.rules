rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow ALL authenticated users (including anonymous) to read/write their own data
    match /users/{userId}/data/{dataKey} {
      allow read, write: if request.auth != null || userId.matches('device_.*');
    }
    
    // Fallback: Allow device-based IDs for offline-first functionality (no auth required)
    match /users/{userId}/{document=**} {
      allow read, write: if userId.matches('device_.*');
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
